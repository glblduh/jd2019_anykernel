#!/sbin/sh

OUTFD=/proc/self/fd/$2;
JHOME=/tmp/jzhome;
BLOCK=/dev/block/bootdevice/by-name;

BB=$JHOME/bin/busybox;

ui_print() {
  echo "ui_print $1" >> $OUTFD;
  echo "ui_print" >> $OUTFD;
}

if [ ! $(getprop ro.product.device) = "jd2019" ]; then
  ui_print " This kernel is only available for jd2019 device!";
  exit 1;
fi;

s='\\''\\';

ui_print "  __                                    ___       ";
ui_print " /\ \  _                               /\_ \      ";
ui_print " \ \ \/ \     ___   _ __    ___     ___\//\ \     ";
ui_print "  \ \   /    / __ \/\  __\/  _  \  / __ $s \ \    ";
ui_print "   \ \ \ â€” _/\  __/\ \ \/ /\ \/\ \/\  __/ \_\ \_  ";
ui_print "    \ \_\-\_\ \____$s \_\ \ \_\ \_\ \____\/\____\ ";
ui_print "     \/_/\/_/\/____/ \/_/  \/_/\/_/\/____/\/____/ ";
ui_print " ";
ui_print "=================================================";
ui_print " Kernel version   : 4.9.325-jzinferno";
ui_print " Android version  : 11+ (Minimal Api 30)";
ui_print " Device           : Lenovo Z5s (jd2019)";
ui_print " Author           : Zaharchenko (jzinferno)";
ui_print "=================================================";

mount -o remount,rw / > /dev/null 2>&1;

rm -rf $JHOME;
mkdir -p $JHOME;
unzip -q $3 -d $JHOME;
cd $JHOME;

ui_print " - Dump stock boot.img ...";
$BB dd if=$BLOCK/boot of=$JHOME/old.img;

ui_print " - Split kernel ...";
$JHOME/bin/magiskboot split $JHOME/Image.gz-dtb > /dev/null 2>&1;
if ! [ $? -eq 0 ]; then
  exit 1;
fi;

ui_print " - Repacking boot image ...";
$JHOME/bin/magiskboot repack $JHOME/old.img $JHOME/boot.img > /dev/null 2>&1;
if ! [ $? -eq 0 ]; then
  exit 1;
fi;

echo "progress 1 1" >> $OUTFD;

if [ -f $JHOME/boot.img ]; then
  ui_print " - Patching boot image ...";
  $BB dd if=$JHOME/boot.img of=$BLOCK/boot;
else
  ui_print " boot.img not found!";
  exit 1;
fi;

if [ -f $JHOME/dtbo.img ]; then
  ui_print " - Patching dtbo image ...";
  $BB dd if=$JHOME/dtbo.img of=$BLOCK/dtbo;
else
  ui_print " dtbo.img not found!";
fi;

rm -rf $JHOME;
exit 0;
